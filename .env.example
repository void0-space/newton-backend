# Server Configuration
NODE_ENV=development
PORT=4001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_api
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=10000
DB_STATEMENT_TIMEOUT_MS=300000

# Redis Configuration (Required)
REDIS_URL=redis://localhost:6379

# Authentication (Better Auth)
BETTER_AUTH_SECRET=changeme_min_32_chars_random_string
BETTER_AUTH_URL=http://localhost:4001
# Social Auth (Optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Security
ENCRYPTION_KEY=changeme_min_32_chars_random_string_for_encryption
CORS_DOMAINS=http://localhost:3000,http://localhost:4001

# Logger Configuration
LOG_BUFFER_SIZE=256000
LOG_FLUSH_INTERVAL_MS=2000

# Storage Configuration (S3 Compatible)
# STORAGE_ENDPOINT=
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=
STORAGE_BUCKET=whatsapp-media

# Cloudflare R2 (Optional)
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_R2_ACCESS_KEY_ID=
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=
# CLOUDFLARE_R2_BUCKET=

# Razorpay (Optional)
# RZP_KEY_ID=
# RZP_KEY_SECRET=
# RZP_WEBHOOK_SECRET=